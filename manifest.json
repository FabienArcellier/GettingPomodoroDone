{
  "manifest_version": 2,

  "name": "Getting Pomodoro Done",
  "description": "",
  "version": "0.2",
  
  "icons": { 
    "16": "app/img/app-icon-16.png",
    "64": "app/img/app-icon-64.png",
    "128": "app/img/app-icon.png" },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "webRequest"
  ],
  "app": {
    "launch": {
      "local_path": "app/index.html"
    }
  },
  "offline_enabled": true
}